<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hunlang">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LowerUpper"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".WithOrWithout_Activity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Mixed_Activity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Rules_Activity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Together_Activity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>